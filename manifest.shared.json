{
  "manifest_version": 3,
  "name": "Custom Bang Search",
  "version": "0.10.0",
  "description": "Allows you to use custom bangs inside the search bar",
  "icons": {
    "96": "images/icons/icon_96.png",
    "128": "images/icons/icon_128.png"
  },
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "*://www.google.com/*",
    "*://*.bing.com/*",
    "*://*.duckduckgo.com/*",
    "*://*.ecosia.org/*",
    "*://*.brave.com/*",
    "*://*.metager.org/*",
    "*://*.mojeek.com/*",
    "*://searx.tiekoetter.com/*"
  ],
  "options_ui": {
    "page": "src/optionsui/options.html",
    "open_in_tab": true
  },
  "action": {
    "browser_style": true,
    "default_icon": {
      "96": "images/icons/icon_96.png",
      "128": "images/icons/icon_128.png"
    },
    "default_title": "Custom Bang Search",
    "default_popup": "src/popup/popup.html"
  }
}