{
  "name": "custombangsearch",
  "version": "0.10.0",
  "description": "A browser extension to use custom DuckDuckGo-like bangs directly from the address bar",
  "main": "",
  "scripts": {
    "test": "jest",
    "tsc-lint": "npx tsc -noEmit",
    "build-firefox": "node ./bob.mjs -d -b firefox",
    "build-firefox-release": "node ./bob.mjs -b firefox",
    "build-chrome": "node ./bob.mjs -d -b chrome",
    "build-chrome-release": "node ./bob.mjs -b chrome"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/psidex/CustomBangSearch.git"
  },
  "keywords": [
    "chrome",
    "firefox",
    "extension",
    "addon",
    "browser-extension",
    "web-extension",
    "chrome-extension",
    "firefox-extension",
    "firefox-addon",
    "search",
    "custom-search",
    "duckduckgo",
    "bang",
    "bangs"
  ],
  "author": "psidex",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/psidex/CustomBangSearch/issues"
  },
  "homepage": "https://github.com/psidex/CustomBangSearch#readme",
  "eslintConfig": {
    "env": {
      "browser": true,
      "webextensions": true
    },
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "airbnb-typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-restricted-syntax": "off"
    },
    "ignorePatterns": [
      "src/**/*.js",
      "src/**/*.jsx"
    ]
  },
  "dependencies": {
    "nanoid": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.1",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "esbuild": "0.17.5",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "execa": "^7.0.0",
    "fs-extra": "^11.1.0",
    "jest": "^29.4.1",
    "listr2": "^5.0.7",
    "typescript": "^4.9.5"
  }
}
